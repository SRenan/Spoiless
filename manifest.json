{
  "manifest_version": 3,
  "name": "Spoiless",
  "version": "1.0.1",
  "description": "Hide spoilers in Google Sports widgets and Liquipedia tournament brackets. Click to reveal scores and VODs without spoiling results.",
  "permissions": ["storage"],
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Spoiless Settings",
    "default_icon": "icons/icon.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/*",
        "*://www.google.co.uk/*",
        "*://www.google.ca/*",
        "*://www.google.fr/*",
        "*://www.google.de/*",
        "*://www.google.es/*",
        "*://www.google.it/*",
        "*://www.google.com.br/*",
        "*://www.google.com.au/*",
        "*://www.google.co.jp/*",
        "*://www.google.co.in/*"
      ],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://liquipedia.net/*"],
      "css": ["liquipedia.css"],
      "js": ["liquipedia.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "spoiless@example.com",
      "data_collection_permissions": {
        "required": ["websiteContent"]
      }
    }
  }
}
